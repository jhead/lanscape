{
  "name": "@lanscape/electron",
  "version": "0.0.0",
  "description": "Lanscape Electron desktop application",
  "author": "jxh",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "dev": "tsc && electron .",
    "build": "tsc",
    "build:agent:mac": "cd ../../lanscape-agent && GOOS=darwin GOARCH=amd64 go build -o ../packages/electron/resources/lanscape-agent-darwin-amd64 ./cmd/lanscape-agent && GOOS=darwin GOARCH=arm64 go build -o ../packages/electron/resources/lanscape-agent-darwin-arm64 ./cmd/lanscape-agent",
    "build:agent:win": "cd ../../lanscape-agent && GOOS=windows GOARCH=amd64 go build -o ../packages/electron/resources/lanscape-agent-windows-amd64.exe ./cmd/lanscape-agent && GOOS=windows GOARCH=arm64 go build -o ../packages/electron/resources/lanscape-agent-windows-arm64.exe ./cmd/lanscape-agent",
    "build:agent": "pnpm build:agent:mac && pnpm build:agent:win",
    "copy:webui": "node scripts/copy-webui.js",
    "build:full": "pnpm build && pnpm copy:webui",
    "dist": "pnpm build:full && electron-builder",
    "dist:mac": "pnpm build:full && electron-builder --mac"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8",
    "typescript": "~5.9.3"
  },
  "build": {
    "appId": "io.jxh.lanscape",
    "productName": "Lanscape",
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "files": [
      "dist/**/*",
      "resources/**/*"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": "resources",
        "filter": ["**/*"]
      }
    ],
    "directories": {
      "output": "dist-electron"
    }
  }
}

